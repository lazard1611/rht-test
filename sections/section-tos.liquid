<link rel="stylesheet" href="{{ "section-tos.css" | asset_url }}">

{% render "set-sections-paddings", section_data: section, wrapper_class: "tos__content" %}
{% render "set-sections-borders", section_data: section, wrapper_class: "tos__wrap" %}

{% render "section-header", section: section, parent_class: "tos", borders: true, button_color: section.settings.button_color %}

<div class="tos__wrap">
    <div class="tos__container page_wrap page_wrap--border">

        <div class="tos__content base_richtext">
            {{ page.content }}
        </div>
    </div>    
</div>

{% schema %}
    {
        "name": "TOS",
        "class": "tos",
        "tag": "section",
        "settings": [
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 200,
                "step": 5,
                "unit": "px",
                "label": "Padding top",
                "default": 0
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 200,
                "step": 5,
                "unit": "px",
                "label": "Padding bottom",
                "default": 0
            },
            {
                "type": "range",
                "id": "padding_top_mobile",
                "min": 0,
                "max": 100,
                "step": 5,
                "unit": "px",
                "label": "Padding top mobile",
                "default": 0
            },
            {
                "type": "range",
                "id": "padding_bottom_mobile",
                "min": 0,
                "max": 100,
                "step": 5,
                "unit": "px",
                "label": "Padding bottom mobile",
                "default": 0
            },
            {
                "type": "select",
                "id": "section_horizontal_borders",
                "label": "Section horizontal borders",
                "options": [
                    {
                        "value": "top",
                        "label": "Top"
                    },
                    {
                        "value": "bottom",
                        "label": "Bottom"
                    },
                    {
                        "value": "double",
                        "label": "Double"
                    }
                ],
                "default": "bottom"
            },            
            {
                "type": "select",
                "id": "button_color",
                "label": "Button color",
                "options": [
                    {
                        "value": "btn_base_brown",
                        "label": "Brown"
                    },
                    {
                        "value": "btn_base",
                        "label": "Base"
                    }
                ],
                "default": "btn_base"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "text",
                "id": "description",
                "label": "Description"
            },
            {
                "type": "text",
                "id": "button_title",
                "label": "Button title"
            },
            {
                "type": "text",
                "id": "button_title_mob",
                "label": "Button title for mobile"
            },
            {
                "type": "url",
                "id": "button_url",
                "label": "Button url"
            }
        ],
        "presets": [
            {
                "name": "TOS"
            }
        ]
    }
    {% endschema %}