{% if section.blocks.size > 0 %}
    <link rel="stylesheet" href="{{ "section-our-showcases.css" | asset_url }}">
    {% render "set-sections-paddings", section_data: section, wrapper_class: "section-our-showcases__header-wrapper" %}
    {% render "set-sections-borders", section_data: section, wrapper_class: "section-our-showcases__wrapper" %}

    {% assign checkIndex = 1 %}

    {% if section.settings.title_limits == "true" %}
        {% assign title_limits = true %}
    {% endif %}

    <div class="section-our-showcases__wrapper">
        {% render "section-header", section: section, parent_class: "section-our-showcases", limits: title_limits, borders: true, button_color: section.settings.button_color %}

        <div class="section-our-showcases__projects page_wrap page_wrap--border page_wrap--without-paddings">
            {% for project in section.blocks %}
                {% if checkIndex == 1 %}
                    {% assign side = "right" %}
                {% else %}
                    {% assign side = "left" %}
                {% endif %}

                <div class="section-our-showcases__project page_wrap {{ side }}">
                    <div class="section-our-showcases__content">
                        <div class="section-our-showcases__title-block">
                            <h3 class="section-our-showcases__title">{{ project.settings.project.title }}</h3>
                            <div class="section-our-showcases__description base_richtext small">{{ project.settings.project.metafields.opk.fast_description | metafield_tag }}</div>
                        </div>

                        {% render "buttons", link: project.settings.project.url, title: section.settings.read_more_button_title, class: "section-our-showcases__button btn_base_text", attribute: "data-template-product-details-button", icon: true %}
                    </div>

                    <a class="section-our-showcases__image-wrapper" href="{{ project.settings.project.url }}">
                        <img class="section-our-showcases__image" src="{{ project.settings.project.image | image_url }}"
                             alt=""
                             width="auto"
                             height="auto"
                             loading="lazy"
                        >
                    </a>
                </div>

                {% assign checkIndex = checkIndex | plus: 1 %}

                {% if checkIndex > 2 %}
                    {% assign checkIndex = 1 %}
                {% endif %}
            {% endfor %}
        </div>
    </div>

    <script src="{{ "section-our-showcases.js" | asset_url }}" type="module" defer></script>
{% endif %}

{% schema %}
{
    "name": "Our showcases",
    "class": "section-our-showcases",
    "tag": "section",
    "settings": [
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 200,
            "step": 5,
            "unit": "px",
            "label": "Padding top",
            "default": 0
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 200,
            "step": 5,
            "unit": "px",
            "label": "Padding bottom",
            "default": 0
        },
        {
            "type": "range",
            "id": "padding_top_mobile",
            "min": 0,
            "max": 100,
            "step": 5,
            "unit": "px",
            "label": "Padding top mobile",
            "default": 0
        },
        {
            "type": "range",
            "id": "padding_bottom_mobile",
            "min": 0,
            "max": 100,
            "step": 5,
            "unit": "px",
            "label": "Padding bottom mobile",
            "default": 0
        },
        {
            "type": "select",
            "id": "section_horizontal_borders",
            "label": "Section horizontal borders",
            "options": [
                {
                    "value": "top",
                    "label": "Top"
                },
                {
                    "value": "bottom",
                    "label": "Bottom"
                },
                {
                    "value": "double",
                    "label": "Double"
                }
            ],
            "default": "top"
        },
        {
            "type": "select",
            "id": "title_limits",
            "label": "Title limits",
            "options": [
                {
                    "value": "true",
                    "label": "True"
                },
                {
                    "value": "false",
                    "label": "False"
                }
            ],
            "default": "false"
        },
        {
            "type": "select",
            "id": "button_color",
            "label": "Button color",
            "options": [
                {
                    "value": "btn_base_brown",
                    "label": "Brown"
                },
                {
                    "value": "btn_base",
                    "label": "Base"
                }
            ],
            "default": "btn_base"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "text",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "text",
            "id": "button_title",
            "label": "Button title"
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Button url"
        },
        {
            "type": "text",
            "id": "read_more_button_title",
            "label": "Read more button title",
            "default": "Lees meer"
        }
    ],
    "blocks": [
        {
            "name": "article",
            "type": "article",
            "settings": [
                {
                    "type": "article",
                    "id": "project",
                    "label": "Project"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Our showcases"
        }
    ]
}
{% endschema %}