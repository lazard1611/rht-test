<link rel="stylesheet" href="{{ "section-stages.css" | asset_url }}">
{% render "set-sections-paddings", section_data: section, wrapper_class: "section-stages__header-wrapper" %}
{% render "set-sections-borders", section_data: section, wrapper_class: "section-stages__wrapper" %}

{% assign borders_for_header = false %}
{% assign title_limits = false %}

{% if section.settings.header_vertical_borders == "true" %}
    {% assign borders_for_header = true %}
{% endif %}

{% if section.settings.title_limits == "true" %}
    {% assign title_limits = true %}
{% endif %}

<div class="section-stages__wrapper">
    {% render "section-header", section: section, parent_class: "section-stages", limits: title_limits, borders: borders_for_header, button_color: section.settings.button_color %}

    <div class="section-stages__content js-fade-section">
        <div class="section-stages__cards page_wrap page_wrap--border page_wrap--without-paddings">
            {% for stage in section.blocks %}
                {% if stage.settings != blank %}
                    <a class="section-stages__card js-fade {% if stage.settings.url == page.url %}active{% endif %}" href="{{ stage.settings.url }}">
                        <div class="section-stages__card-header">
                            <h3 class="section-stages__card-title">{{ stage.settings.title }}</h3>

                            <div class="section-stages__card-icon">
                                {% render "icons", filename: "arrow_link" %}
                            </div>
                        </div>

                        <p class="section-stages__card-description">{{ stage.settings.description }}</p>
                    </a>
                {% endif %}
            {% endfor %}
        </div>

        {% if section.settings.button_title %}
            <div class="section-stages__button-wrapper page_wrap">
                {% render "buttons", link: section.settings.url, title: section.settings.button_title, class: "btn_base_brown", icon: true %}
            </div>
        {% endif %}        
    </div>
</div>

<script src="{{ "section-stages.js" | asset_url }}" type="module" defer></script>

{% schema %}
{
    "name": "Stages",
    "class": "section-stages",
    "tag": "section",
    "settings": [
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 200,
            "step": 5,
            "unit": "px",
            "label": "Padding top",
            "default": 0
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 200,
            "step": 5,
            "unit": "px",
            "label": "Padding bottom",
            "default": 0
        },
        {
            "type": "range",
            "id": "padding_top_mobile",
            "min": 0,
            "max": 100,
            "step": 5,
            "unit": "px",
            "label": "Padding top mobile",
            "default": 0
        },
        {
            "type": "range",
            "id": "padding_bottom_mobile",
            "min": 0,
            "max": 100,
            "step": 5,
            "unit": "px",
            "label": "Padding bottom mobile",
            "default": 0
        },
        {
            "type": "select",
            "id": "section_horizontal_borders",
            "label": "Section horizontal borders",
            "options": [
                {
                    "value": "top",
                    "label": "Top"
                },
                {
                    "value": "bottom",
                    "label": "Bottom"
                },
                {
                    "value": "double",
                    "label": "Double"
                }
            ],
            "default": "top"
        },
        {
            "type": "select",
            "id": "header_vertical_borders",
            "label": "Header vertical borders",
            "options": [
                {
                    "value": "true",
                    "label": "True"
                },
                {
                    "value": "false",
                    "label": "False"
                }
            ],
            "default": "false"
        },
        {
            "type": "select",
            "id": "title_limits",
            "label": "Title limits",
            "options": [
                {
                    "value": "true",
                    "label": "True"
                },
                {
                    "value": "false",
                    "label": "False"
                }
            ],
            "default": "false"
        },
        {
            "type": "select",
            "id": "button_color",
            "label": "Button color",
            "options": [
                {
                    "value": "btn_base_brown",
                    "label": "Brown"
                },
                {
                    "value": "btn_base",
                    "label": "Base"
                }
            ],
            "default": "btn_base"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "text",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "text",
            "id": "button_title",
            "label": "Button title"
        },
        {
            "type": "url",
            "id": "button_url",
            "label": "Button url"
        }
    ],
    "blocks": [
        {
            "name": "Stage",
            "type": "stage",
            "limit": 4,
            "settings": [
                {
                    "type": "url",
                    "id": "url",
                    "label": "Url"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "text",
                    "id": "description",
                    "label": "Description"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Stages"
        }
    ]
}
{% endschema %}